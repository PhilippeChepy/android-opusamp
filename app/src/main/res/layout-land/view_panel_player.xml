<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:layout_weight="50">

            <!-- (Hauteur de la bottomBar / 2) - (Hauteur de la seekBar / 2) -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/audio_controls_controls_height">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/player_art_blured"
                    android:scaleType="centerCrop"
                    android:clickable="true"
                    android:src="@drawable/no_art_normal" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/transparent_white" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/square_view_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:padding="5dp">

                <eu.chepy.opus.player.ui.views.SquareImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/player_art"
                    android:scaleType="centerCrop"
                    android:clickable="true"
                    android:src="@drawable/no_art_normal"
                    android:layout_marginBottom="@dimen/audio_controls_controls_height" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/progress"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:minHeight="40dp"
                android:maxHeight="40dp"
                android:padding="0dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="36dp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/audio_controls_controls_height"
                android:layout_alignParentBottom="true">

                <include layout="@layout/view_audio_player_controls" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:layout_weight="50">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/playlist_container"
                android:padding="5dp"
                android:layout_marginTop="68dp"
                android:layout_marginBottom="@dimen/audio_controls_controls_height" >

                <include layout="@layout/view_list_dragable_listview"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/audio_controls_controls_height"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="fill_parent"
                    android:layout_weight="40.0"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical" >

                </LinearLayout>

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="fill_parent"
                    android:layout_weight="60.0"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal" >


                    <ImageButton
                        android:id="@+id/playlist_show"
                        style="@style/PlayerButton"
                        android:contentDescription="@string/imageview_content_description_playlist"
                        android:visibility="invisible"
                        android:src="@drawable/ic_action_list_2_off" />

                    <ImageButton
                        android:id="@+id/song_options"
                        style="@style/PlayerButton"
                        android:contentDescription="@string/imageview_content_description_option_menu"
                        android:src="@drawable/ic_action_overflow" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/upper_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:layout_weight="50"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@color/transparent_white"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/audio_player_header"
                    android:layout_height="68.0dp"
                    android:layout_weight="25.0"
                    android:layout_width="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <eu.chepy.opus.player.ui.views.CustomTextView
                        android:id="@+id/audio_player_track_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:paddingBottom="2.0dip"
                        android:paddingLeft="10.0dip"
                        android:singleLine="true"
                        android:textColor="#ff000000"
                        android:textIsSelectable="false"
                        android:textSize="16.0dip" />

                    <eu.chepy.opus.player.ui.views.CustomTextView
                        android:id="@+id/audio_player_artist_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:paddingLeft="10.0dip"
                        android:singleLine="true"
                        android:textColor="#ff000000"
                        android:textIsSelectable="false"
                        android:textSize="16.0dip" />
                </LinearLayout>

                <eu.chepy.opus.player.ui.views.CustomTextView
                    android:id="@+id/audio_player_time"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="75.0"
                    android:gravity="center"
                    android:textColor="#ff33b5e5"
                    android:textIsSelectable="false"
                    android:textSize="23.0dip" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:gravity="center_vertical"
            android:layout_weight="50"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <eu.chepy.opus.player.ui.views.CustomTextView
                    android:id="@+id/playlist_track_count"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingBottom="2.0dip"
                    android:paddingLeft="10.0dip"
                    android:singleLine="true"
                    android:gravity="left"
                    android:textColor="#ff000000"
                    android:textIsSelectable="false"
                    android:textSize="16.0dip" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
