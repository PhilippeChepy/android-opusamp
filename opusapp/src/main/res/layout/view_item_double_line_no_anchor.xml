<?xml version="1.0" encoding="utf-8"?>
<LinearLayout     xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/item_reduced_height"
    android:background="@drawable/song_list"
    android:gravity="center"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"  >

    <net.opusapp.player.ui.views.CustomTextView
        android:id="@+id/line_one"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/grid_item_padding_left"
        android:paddingRight="@dimen/grid_item_padding_left"
        android:textIsSelectable="false"
        android:singleLine="true"
        android:textColor="#ff000000"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold" />

    <net.opusapp.player.ui.views.CustomTextView
        android:id="@+id/line_two"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/grid_item_padding_left"
        android:paddingRight="@dimen/grid_item_padding_left"
        android:textIsSelectable="false"
        android:singleLine="true"
        android:textColor="#ff999999"
        android:textSize="@dimen/text_size_small" />

</LinearLayout>