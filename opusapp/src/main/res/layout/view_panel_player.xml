<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/upper_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@drawable/upper_panel"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/audio_player_header"
            android:layout_height="68.0dp"
            android:layout_weight="25.0"
            android:layout_width="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <net.opusapp.player.ui.views.CustomTextView
                android:id="@+id/audio_player_track_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingBottom="2.0dip"
                android:paddingLeft="20dp"
                android:singleLine="true"
                android:textColor="#ff000000"
                android:textIsSelectable="false"
                android:textSize="16.0dip" />

            <net.opusapp.player.ui.views.CustomTextView
                android:id="@+id/audio_player_artist_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingLeft="20dp"
                android:singleLine="true"
                android:textColor="#ff999999"
                android:textIsSelectable="false"
                android:textSize="16.0dip" />
        </LinearLayout>

        <net.opusapp.player.ui.views.CustomTextView
            android:id="@+id/audio_player_time"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="75.0"
            android:gravity="center"
            android:textColor="#ff33b5e5"
            android:textIsSelectable="false"
            android:textSize="23.0dip" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/player_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/audio_controls_controls_height_2" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/player_art_blured"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:src="@drawable/no_art_normal" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/transparent_white" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/audio_controls_controls_height"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/audio_controls_controls_height">



            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="fill_parent"
                android:layout_weight="40.0"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical" >

                <net.opusapp.player.ui.views.CustomTextView
                    android:id="@+id/playlist_track_count"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingBottom="2.0dip"
                    android:paddingLeft="10.0dip"
                    android:singleLine="true"
                    android:gravity="left"
                    android:textColor="#ff000000"
                    android:textIsSelectable="false"
                    android:textSize="16.0dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="fill_parent"
                android:layout_weight="60.0"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/playlist_show"
                    style="@style/PlayerButton"
                    android:contentDescription="@string/imageview_content_description_playlist"
                    android:src="@drawable/ic_action_list_2_off" />

                <ImageButton
                    android:id="@+id/song_options"
                    style="@style/PlayerButton"
                    android:contentDescription="@string/imageview_content_description_option_menu"
                    android:src="@drawable/ic_action_overflow" />
            </LinearLayout>
        </LinearLayout>

        <SeekBar
            android:id="@+id/progress"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:minHeight="40dp"
            android:maxHeight="40dp"
            android:padding="0dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="36dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/audio_controls_controls_height"
            android:layout_alignParentBottom="true">

            <include layout="@layout/view_audio_player_controls" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="112dp"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/square_view_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:padding="5dp">

                <net.opusapp.player.ui.views.SquareImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/player_art"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:src="@drawable/no_art_normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/playlist_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone">

                <include layout="@layout/view_list_playlist"/>
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>